<resources>
  
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    
    <item name="backgroundColors">@android:color/white</item>
    <item name="android:textColorSecondary">@color/fontColor</item>
    <item name="textColorSecondary">@color/fontColor</item>
    <item name="textColors">@color/colorPrimaryDark</item>
  
    <item name="navActive">@color/blue_A200</item>
    <item name="navInActive">@color/fontColor</item>
  </style>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="RippleStyleBlack">
    <item name="mrl_rippleColor">#8096989a</item>
  </style>
  <style name="RippleStyleDark">
    <item name="mrl_rippleColor">#80000000</item>
  </style>
  <style name="RippleStyleWhite">
    <item name="mrl_rippleAlpha">0.2</item>
    <item name="mrl_rippleColor">#80ffffff</item>
    <item name="mrl_rippleHover">true</item>
    <item name="mrl_rippleOverlay">true</item>
  </style>
</resources>
