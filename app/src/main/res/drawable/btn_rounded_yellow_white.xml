<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true">
        <layer-list>
            <item android:left="4dp" android:top="6dp" android:right="4dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <corners android:radius="4dp"/>
                    <solid android:color="@color/yellow_700"/>
                    <padding android:left="25dp" android:top="0dp" android:right="25dp" android:bottom="0dp"/>
                    <size android:height="20dp" android:width="70dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="4dp" android:top="6dp" android:right="4dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <corners android:radius="4dp"/>
                    <solid android:color="@android:color/white"/>
                    <padding android:left="25dp" android:top="0dp" android:right="25dp" android:bottom="0dp"/>
                    <size android:height="20dp" android:width="70dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
